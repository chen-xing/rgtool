<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.gzcx</groupId>
  <artifactId>rgtool</artifactId>
  <name>rgtool</name>
  <version>1.0-SNAPSHOT</version>
  <url>https://www.gzcx.net</url>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.*</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.css</include>
          <include>**/*.fxml</include>
          <include>**/fxml/*.fxml</include>
        </includes>
      </resource>
    </resources>
    <finalName>rgtool</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <encoding>${project.build.sourceEncoding}</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>org.jb2011</pattern>
                  <shadedPattern>net.gzcx.jb2021</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.jdesktop</pattern>
                  <shadedPattern>net.gzcx.jdesktop</shadedPattern>
                </relocation>
              </relocations>
              <transformers>
                <transformer>
                  <mainClass>net.gzcx.Launch</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.github.wvengen</groupId>
        <artifactId>proguard-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>proguard</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>net.sf.proguard</groupId>
            <artifactId>proguard-base</artifactId>
            <version>6.2.2</version>
            <scope>runtime</scope>
          </dependency>
        </dependencies>
        <configuration>
          <proguardVersion>6.2.2</proguardVersion>
          <injar>${project.build.finalName}.jar</injar>
          <outjar>${project.build.finalName}-pg.jar</outjar>
          <obfuscate>true</obfuscate>
          <proguardInclude>${project.basedir}/proguard.conf</proguardInclude>
          <libs>
            <lib>${java.home}/lib/rt.jar</lib>
          </libs>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>cxztt-maven</id>
      <url>https://gitee.com/chen-xing/maven/raw/master/repository</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <lucene.version>3.0.2</lucene.version>
    <lombok.version>1.16.20</lombok.version>
    <chenxing.base.version>1.0.0</chenxing.base.version>
    <sqlite-jdbc.version>3.32.3.2</sqlite-jdbc.version>
    <hutool.version>5.5.7</hutool.version>
    <mybatis.version>3.5.6</mybatis.version>
    <maven.compiler.target>1.8</maven.compiler.target>
    <okhttp.version>3.7.0</okhttp.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <pagehelper.version>5.1.2</pagehelper.version>
    <flatlaf.version>2.4</flatlaf.version>
    <maven.compiler.source>1.8</maven.compiler.source>
  </properties>
</project>
